  <script>
    document.getElementById("y").textContent = new Date().getFullYear();

    function trackCta(label){
      window.dataLayer = window.dataLayer || [];
      window.dataLayer.push({
        event: "cta_click",
        cta_label: label,
        page_type: "landing",
        business: "الريادة للخدمات الفنية"
      });
    }

    function sendWhatsAppLead(e){
      e.preventDefault();
      const name = document.getElementById("name").value.trim();
      const phone = document.getElementById("phone").value.trim();
      const emirate = document.getElementById("emirate").value.trim();
      const service = document.getElementById("service").value.trim();
      const location = document.getElementById("location").value.trim();
      const details = document.getElementById("details").value.trim();

      const err = document.getElementById("err");
      const ok = document.getElementById("ok");
      err.style.display = "none"; ok.style.display = "none";

      if(!name || !phone || !emirate || !service || !details){
        err.style.display = "block";
        return false;
      }

      // Conversion signal for algorithms (GTM/Ads)
      window.dataLayer = window.dataLayer || [];
      window.dataLayer.push({
        event: "lead_submit",
        page_type: "landing",
        business: "الريادة للخدمات الفنية",
        phone: "0526480547",
        emirate: emirate,
        service: service
      });

      ok.style.display = "block";

      const msg =
        "طلب عرض سعر - الريادة للخدمات الفنية%0A" +
        "الاسم: " + encodeURIComponent(name) + "%0A" +
        "رقم التواصل: " + encodeURIComponent(phone) + "%0A" +
        "الإمارة: " + encodeURIComponent(emirate) + "%0A" +
        "الخدمة: " + encodeURIComponent(service) + "%0A" +
        (location ? ("الموقع: " + encodeURIComponent(location) + "%0A") : "") +
        "التفاصيل: " + encodeURIComponent(details) + "%0A" +
        "ملاحظة: سأرسل صور/فيديو للموقع إن توفرت.";

      window.open("https://wa.me/971526480547?text=" + msg, "_blank", "noopener");
      return false;
    }
  </script>
